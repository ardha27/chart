                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama : "
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5101010101010101"
                android:id="@+id/tvNIK"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
